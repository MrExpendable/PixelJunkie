@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    ViewBag.Title = "Upload";
}

<h1>Upload Image</h1>
@using (Html.BeginForm("StoreImage", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @:Choose a file to upload:
    <input type="file" name="file" /> 
    <br />
    <br />
    @:Title: <input type="text" name="title" />
    <br />
    @:Caption: <input type="text" name="caption" />
    <br />
    @:Price: <input type="number" pattern="\d*" name="price" min="1" class="imagePrice"/>
    <br />
    @:Will this be up for auction?<input type="checkbox" id="isForAuction" />
    <div class="auctionInfoSection">
        @Html.Partial("EnterAuctionInfoPartial")
    </div>
    <input type="submit" value="Upload" />    
}
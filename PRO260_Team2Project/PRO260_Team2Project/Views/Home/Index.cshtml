@using PRO260_Team2Project
@model IEnumerable<ImageOwner>
@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    ViewBag.Title = "Home Page";
}
<h1>Home/Index</h1>
<div class="welcome">
    <img alt="welcome">
</div>
<div class="bodyImages">
        @if(Model != null && Model.Count() > 0)
        {
            foreach (ImageOwner io in Model)
            {
                <div class="indexImage">
                    <img src="data:image;base64,@System.Convert.ToBase64String(io.Image.Image1)" class="images"/>
                    <ul>
                        <li>@Html.ActionLink(@io.Title, "SingleImage", "Image", @io, null)</li>
                        <li>Likes: @io.Likes</li>
                    </ul>
                </div>
            }
        }
    <span class="stretch"></span>
</div>

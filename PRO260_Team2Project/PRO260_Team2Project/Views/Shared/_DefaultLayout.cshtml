<!DOCTYPE html>

<html>
    <head>
        <link rel="stylesheet" type="text/css" href="~/Assets/reset.css" />
        <link rel="stylesheet" type="text/css" href="~/Assets/styles.css" />
        <script src="~/Assets/jquery-2.1.0.min.js"></script>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <div class="content">
            <nav>
                <img class="logo" src="/Assets/Images/logo.png">
                <form class="search">
                    <input type="text" name="username" />
                    <input type="submit" value="Search">
                </form>
                <ul>
                    <li>
                        <div class="icon">
                            <img src="~/Assets/Images/Icons/home32.png" />
                        </div>
                        <div class="navLink">@Html.ActionLink("Home", "Index", "Home")</div>
                    </li>
                    <li>
                        <div class="icon">
                            <img src="~/Assets/Images/Icons/contactcard32.png" />
                        </div>
                        <div class="navLink">@Html.ActionLink("Profile", "Profile", "Account", WebSecurity.CurrentUserId)</div>
                    </li>
                    <li>
                        <div class="icon">
                            <img src="~/Assets/Images/Icons/mail32.png" />
                        </div>
                        <div class="navLink">@Html.ActionLink("Messages", "MessageCenter", "MessageCenter")</div>
                    </li>
                    <li>
                        <div class="icon">
                            <img src="~/Assets/Images/Icons/moneyreceipt32.png" />
                        </div>
                        <div class="navLink">@Html.ActionLink("Auctions", "Featured", "Home")</div>
                    </li>
                    <li>
                        <div class="icon">
                            <img src="~/Assets/Images/Icons/upload32.png" />
                        </div>
                        <div class="navLink">@Html.ActionLink("Upload", "UploadImage", "Home")</div>
                    </li>
                    <li>
                        <div class="icon">
                            <img src="~/Assets/Images/Icons/article32.png" />
                        </div>
                        <div class="navLink">@Html.ActionLink("Login/Register", "Login", "Account")</div>
                    </li>
                </ul>
            </nav>
            <div class="mainContent" id="container">
                @RenderBody()
                <footer>
                    <ul>
                        <li>@Html.ActionLink("Home", "Index")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Profile", "Profile", "Account", WebSecurity.CurrentUserId)</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Accounts", "Index", "Account")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Auctions", "Featured")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Upload", "UploadImage")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Login/Register", "Login")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Single Image", "SingleImage", "Image")</li>
                    </ul>
                </footer>
            </div>
        </div>
    </body>

    <script src="~/Content/Assets/scripts.js"></script>
</html>
